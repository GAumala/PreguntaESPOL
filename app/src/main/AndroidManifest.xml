<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="espol.ihm.preguntaespol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreguntaDetailActivity" />
        <activity
            android:name=".AskActivity"/>
        <activity
            android:name=".AnswerActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MisAnunciosActivity"/>
        <activity
            android:name=".MisPreguntasActivity"/>
        <activity
            android:name=".MisRespuestasActivity"/>
        <activity
            android:name=".MisRecompensasActivity"/>
    </application>

</manifest>